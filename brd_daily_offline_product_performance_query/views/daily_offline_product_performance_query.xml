<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record model="ir.ui.view" id="tree_brd_dailyOfflineProductPerformanceQuery">
            <field name="name">Tree Daily Offline Product Performance Query</field>
            <field name="model">brd.daily_offline_product_performance_query</field>
            <field name="arch" type="xml">
                <tree string="Daily Offline Product Performance Query" create="false" edit="false" delete="false">
                    <field name="date_order"/>
                    <field name="product_template_id"/>
                    <field name="pos_id"/>
                    <field name="quantity" sum="Total Quantity"/>
                    <field name="total" sum="Total"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="search_brd_dailyOfflineProductPerformanceQuery">
            <field name="name">Search Daily Offline Product Performance Query</field>
            <field name="model">brd.daily_offline_product_performance_query</field>
            <field name="arch" type="xml">
                <search string="Search Daily Offline Product Performance Query">
                    <field name="date_order"/>
                    <field name="product_template_id"/>
                    <group name="group_1" string="Group By">
                        <filter string="Date" context="{'group_by':'date_order:day'}"/>
                        <filter string="Product Template" context="{'group_by':'product_template_id'}"/>
                        <filter string="PoS" context="{'group_by':'pos_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record id="waction_brd_dailyOfflineProductPerformanceQuery" model="ir.actions.act_window">
			<field name="name">Daily Offline Product Performance Query</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">brd.daily_offline_product_performance_query</field>
			<field name="search_view_id" ref="search_brd_dailyOfflineProductPerformanceQuery"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>			
		</record>
		
		<record id="wactionView_brd_treeDailyOfflineProductPerformanceQuery" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_brd_dailyOfflineProductPerformanceQuery"/>
			<field name="act_window_id" ref="waction_brd_dailyOfflineProductPerformanceQuery"/>
		</record>

    </data>
</openerp>
