<?xml version="1.0" encoding="UTF-8"?>  
       
<templates id="template" xml:space="preserve">
    
    <t t-extend="PosTicket" >
        <t t-jquery=".pos-sale-ticket" t-operation="replace"> 
            <div class="pos-sale-ticket">
                <div id="company_logo" style="text-align:center;"><img t-att-src="'data:image/png;base64,'+ widget.pos.company.logo" height="40%" width="40%"/></div>
                <div class="pos-center-align">
                    <strong><t t-esc="widget.pos.company.name"/></strong><br />
                </div>
                <hr/>
                
                <div class="pos-center-align">
                    <t t-if="widget.pos.partner_location">

                        <t t-if="widget.pos.partner_location.street and widget.pos.partner_location.street2">
                            <t t-esc="widget.pos.partner_location.street || ''"/><br />
                            <t t-esc="widget.pos.partner_location.street2 || ''"/><br />
                        </t>
                        
                        <t t-if="widget.pos.partner_location.street and !widget.pos.partner_location.street2">
                            <t t-esc="widget.pos.partner_location.street || ''"/><br />
                        </t>

                        <t t-if="!widget.pos.partner_location.street and widget.pos.partner_location.street2">
                            <t t-esc="widget.pos.partner_location.street2 || ''"/><br />
                        </t>
                        
                        <t t-if="widget.pos.state">
                            <t t-if="widget.pos.partner_location.city">
                                <t t-esc="widget.pos.partner_location.city + ' - ' + widget.pos.state.name || ''" />
                            </t>
                            <t t-if="!widget.pos.partner_location.city">
                                <t t-esc="widget.pos.state.name || ''" />
                            </t>
                        </t>
                        
                        <t t-if="!widget.pos.state">
                            <t t-if="widget.pos.partner_location.city">
                                <t t-esc="widget.pos.partner_location.city || ''" />
                            </t>

                        </t>
                    </t>

                </div>

                <strong><hr/></strong>
                Date Time: <t t-esc="new Date().toString(Date.CultureInfo.formatPatterns.shortDate + ' ' +
                    Date.CultureInfo.formatPatterns.longTime)"/> 
                Transaction: <t t-esc="order.get('name')"/><br/>
                Cashier: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
                <hr />
                <table>
                    <colgroup>
                        <col width='40%' />
                        <col width='15%' />
                        <col width='15%' />
                        <col width='30%' />
                    </colgroup>
                    <tr>
                        <td><strong>Item</strong></td>
                        <td class="pos-center-align"><strong>Qty</strong></td>
                        <td class="pos-center-align"><strong>Disc.</strong></td>
                        <td class="pos-right-align"><strong>Total</strong></td>
                    </tr>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <td>
                            <t t-esc="orderline.get_product().display_name"/><br/>
                            @ <t t-esc="widget.format_currency(orderline.get_unit_price())"/>
                        </td>
                        <td class="pos-center-align">
                            <t t-esc="orderline.get_quantity_str()"/>
                        </td>
                        <td class="pos-center-align">
                             <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    <t t-esc="orderline.get_discount()"/>
                                </div>
                            </t>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                    </tr>
                </table>
                <br />
                <hr/>
                <table>
                    <tr>
                        <td>Total Before Tax:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.getTotalTaxExcluded())"/>
                        </td>
                    </tr>

                    <t t-jquery=".pos-sale-ticket table .emph" t-operation="replace"> 
                      <t t-if="order.wk_get_discount()">
                        <t t-foreach="order.getTaxDetails()" t-as="taxdetail">
                            <tr>
                                <td><t t-esc="taxdetail.name"/></td>
                                <td class="pos-right-align">
                                    <strong><t t-esc="widget.format_currency(taxdetail.amount)" /></strong>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td>Global Discount:</td>
                            <td class="pos-right-align">
                               <t t-esc="widget.format_currency(order.wk_get_discount())"/>
                            </td>
                        </tr>
                         <tr class="emph">
                            <td>Grand Total:</td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(order.getTotalTaxIncluded()-order.wk_get_discount())"/>
                            </td>
                        </tr>
                        
                        
                      </t>
                      <t t-if="! order.wk_get_discount()">
                            <t t-foreach="order.getTaxDetails()" t-as="taxdetail">
                                <tr>
                                    <td><t t-esc="taxdetail.name"/></td>
                                    <td class="pos-right-align">
                                        <strong><t t-esc="widget.format_currency(taxdetail.amount)" /></strong>
                                    </td>
                                </tr>
                            </t>
                             <tr class="emph">
                                <td>Grand Total:</td>
                                <td class="pos-right-align">
                                    <t t-esc="widget.format_currency(order.getTotalTaxIncluded())"/>
                                </td>
                            </tr>
                        
                      </t>
                    </t>
                </table>
                <br />
                <hr/>
                <table>
                    <t t-foreach="paymentlines" t-as="line">
                        <tr >
                            <td>Payment Method</td>
                            <td class="pos-right-align"><strong><t t-esc="line.name"/></strong></td>
                        </tr>
                        <tr>
                            <td>Money Tendered</td>
                            <td class="pos-right-align"><t t-esc="widget.format_currency(line.get_amount())"/></td>
                        </tr>
                    </t>
                </table>
                <br />
                <table>
                    <tr>
                        <td><strong>Change:</strong></td>
                        <td class="pos-right-align"><strong><t t-esc="widget.format_currency(order.getChange())"/></strong></td>
                    </tr>
                </table>
                <br/>
                <hr/>
                
                <t t-jquery=".pos-sale-ticket" t-operation="append"> 
                  <t t-if="widget.pos.config.print_note">
                   <table>

                        <tr><td>Note:</td><td class="pos-right-align">
                           <t t-esc="order.get_order_note()"/>
                            </td></tr>
                    </table>
                  </t>
                </t>
                
                <strong>Syarat &amp; Ketentuan</strong>
                <table>
                    <colgroup>
                        <col width='10%' />
                        <col width='90%' />
                    </colgroup>
                <tr>
                    <td>1.</td>
                    <td>Barang dapat di tukar dengan syarat kondisi masih baik seperti baru.</td>
                </tr>
                <tr>
                    <td>2.</td>
                    <td>Harap simpan nota pembelian ini sebagai bukti transaksi.</td>
                </tr>
                <tr>
                    <td>3.</td>
                    <td>Jangan lupa upload foto brothers di media social denganHarap simpan nota pembelian ini sebagai bukti transaksi.</td>
                </tr>
                <tr>
                    <td>4.</td>
                    <td>hastag #brodogentelmen</td>
                </tr>
                </table>
                <br/>
                <div style='text-align:center'>
                    <strong><t t-esc="widget.pos.company.phone" /> | <t t-esc="widget.pos.company.email" /><br/>
                    ** Thank You **</strong>
                </div>

                <t t-if="widget.pos.config.receipt_footer">
                    <br />
                    <div style='text-align:center'>
                        <t t-esc="widget.pos.config.receipt_footer" />
                    </div>
                </t>
            </div>
        </t>
    </t>    
</templates>

    
